<div class="container">
  <div class="row m-4">
    <div class="col-md-12 text-center">
      <img src="https://i1.wp.com/www.freepngimg.com/download/burger/4-2-burger-png-file.png" alt="Burger Image" height="300">
      <h1>Eat-Da-Burger!</h1>
    </div>
  </div>
  <div class="row m-4">
    <div class="col-md-6">
      <h2 class="text-center">Available Burgers</h2>
      <ul class="list-unstyled">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2 class="text-center">Devoured Burgers</h2>
      <ul class="list-unstyled">
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row m-4">
    <div class="col-lg-12 text-center">
      <h2>Enter Burger Name and press Submit</h2>
      <form class="create-form">  
        <div class="form-group">
          <label for="burger-name">Burger Name:</label>
          <input type="text" id="burger-name" name="name">
        </div>
        <button class="btn btn-info" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>